
<h1>Books</h1>

<table>
    <thread>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thread>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show", "books/#{book.id}" %></td>
            <td><%= link_to "Edit", "books/#{book.id}/edit" %></td>
            <td><%= link_to 'Delete', "books/#{book.id}",method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
        <% end %>
    </tbody>
</table>


<h2>New Book</h2>

<%= form_with model: @book, url: '/books', local: true do |f| %>

  <% if @book.errors.any? %>
    <div id="error_explanation">
    <!--複数形にするヘルパー-->
    <h2><%= pluralize(@book.errors.count, "error") %>
    prohibited this book from being saved:</h2>
      <% @book.errors.full_messages.each do |msg| %>
      <ul>
        <li><%= msg %></li>  
      </ul>
     <% end %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  
 <%= f.submit 'Create Book' %>
 
<% end %>